    <ProjectReference Include="..\Acme.DemoCenterApp.EntityFrameworkCore\Acme.DemoCenterApp.EntityFrameworkCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.Studio.Client.AspNetCore" Version="0.7.9" />
  </ItemGroup>

